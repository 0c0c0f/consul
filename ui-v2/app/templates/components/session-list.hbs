{{#if (gt items.length 0)}}
    {{#tabular-collection
        items=items as |item index|
    }}
        {{#block-slot 'header'}}
            <th>Name</th>
            <th>ID</th>
            <th>Delay</th>
            <th>TTL</th>
            <th>Behavior</th>
            <th>Checks</th>
            <th>&nbsp;</th>
        {{/block-slot}}
        {{#block-slot 'row'}}
                <td>
                    <a href={{href-to 'dc.services.show' item.Name}}>{{item.Name}}</a>
                </td>
                <td>
                    {{item.ID}}
                </td>
                <td>
                    {{item.LockDelay}}
                </td>
                <td>
                    {{item.TTL}}
                </td>
                <td>
                    {{item.Behavior}}
                </td>
                <td>
                    {{item.Checks}}
                    <ul>
                        {{#each item.Checks as check }}
                            <li>{{check}}</li>
                        {{/each}}
                    </ul>
                </td>
                <td>
                    <button type="button" class="type-delete" {{ action "requestInvalidateSession" item }}>Invalidate</button>
                </td>
        {{/block-slot}}
    {{/tabular-collection}}
{{/if}}
