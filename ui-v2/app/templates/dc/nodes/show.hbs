{{#app-view}}
    {{#block-slot 'breadcrumbs'}}
        <ol>
            <li><a href={{href-to 'dc.nodes'}}>All Nodes</a></li>
        </ol>
    {{/block-slot}}
    {{#block-slot 'header'}}
        <h1>
            {{ model.Node }}
        </h1>
        {{tab-nav items=tabs selected=selectedTab}}
    {{/block-slot}}
    {{#block-slot 'content'}}
        {{#tab-section id=(slugify tabs.[0]) selected=(eq selectedTab (slugify tabs.[0])) onchange=(action 'change')}}
            {{partial 'dc/nodes/healthchecks'}}
        {{/tab-section}}
        {{#tab-section id=(slugify tabs.[1]) selected=(eq selectedTab (slugify tabs.[1])) onchange=(action 'change')}}
            {{partial 'dc/nodes/services'}}
        {{/tab-section}}
        {{#tab-section id=(slugify tabs.[2]) selected=(eq selectedTab (slugify tabs.[2])) onchange=(action 'change')}}
            {{partial 'dc/nodes/rtt'}}
        {{/tab-section}}
        {{#tab-section id=(slugify tabs.[3]) selected=(eq selectedTab (slugify tabs.[3])) onchange=(action 'change')}}
            {{partial 'dc/nodes/sessions'}}
        {{/tab-section}}
    {{/block-slot}}
{{/app-view}}
