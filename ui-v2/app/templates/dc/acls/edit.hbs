{{#app-view}}
    {{#block-slot 'breadcrumbs'}}
        <ol>
            <li><a href={{href-to 'dc.acls'}}>All Tokens</a></li>
        </ol>
    {{/block-slot}}
    {{#block-slot 'header'}}
        <h1>
            {{item.Name}}
        </h1>
    {{/block-slot}}
    {{#block-slot 'actions'}}
{{#if item.ID }}
        <button type="button">Copy Token ID</button>
        <button type="button" {{ action "clone" item }}>Clone token</button>
        <button type="button" {{ action "requestUse" item }}>Use token</button>
{{/if}}
    {{/block-slot}}
    {{#block-slot 'content'}}
        {{ partial 'dc/acls/form'}}
    {{/block-slot}}
{{/app-view}}