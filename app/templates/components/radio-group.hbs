{{!<fieldset>}}
    <div role="radiogroup" id="radiogroup_{{name}}">{{! menu?}}
{{#each items as |item|}}
        <label class="type-radio value-{{item.value}}"> {{! slugify }}
            <input type="radio" name={{name}} value={{item.value}} checked={{if (eq value item.value) 'checked'}} onchange={{action onchange}} />
            <span>{{item.label}}</span>
        </label>
{{/each}}
    </div>
{{!</fieldset>}}
