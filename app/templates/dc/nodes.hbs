    <div class="row">
        <div class="col-md-6 col-lg-5 padded-right-middle {{if isShowingItem "hidden-xs hidden-sm" }}">
        {{!--view App.ActionBarView --}}

          {{#if filteredContent}}

                {{#if condensed }}
                    {{#each filteredContent as |item| }}
                        {{!-- change from original div href=false to a for now --}}
                        {{#link-to 'dc.nodes.show' item.Node class="list-group-item list-condensed-link" }}
                            <div class="list-bar-horizontal {{ if hasFailingChecks "bg-orange" "bg-green"}}"></div>
                            <div class="name">
                                {{item.Node}}
                                <small class="pull-right">
                                    {{ item.numServices }} services
                                </small>
                            </div>
                        {{/link-to}}
                    {{/each}}

                {{else}}

                    {{#each filteredContent as |item| }}
                        {{!-- change from original div href=false to a for now --}}
                        {{#link-to 'dc.nodes.show' item.Node class="list-group-item list-link" }}
                        <div class="list-bar {{if hasFailingChecks "bg-orange" "bg-green" }}"></div>
                            <h4 class="list-group-item-heading">
                                {{item.Node}}
                                <small>{{item.Address}}</small>
                                <div class="heading-helper">
                                    <a class="subtle" href="#">{{item.checkMessage}}</a>
                                </div>
                            </h4>
                            <ul class="list-inline">
                                {{#each item.services as |service|}}
                                    <li class="bold">{{service.Service}}</li>
                                {{/each}}
                            </ul>
                        {{/link-to}}
                    {{/each}}

                {{/if}}

          {{else}}
          <p class="light">There are no nodes to show.</p>
          {{/if}}
      </div>

      <div class="border-left hidden-xs hidden-sm">
      </div>

      <div class="col-md-6 col-lg-7 border-left scrollable">
        <div class="row padded-border">
          {{outlet}}
        </div>
      </div>
    </div>