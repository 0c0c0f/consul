{{#app-view}}
    {{#block-slot 'header'}}
        <a href={{href-to 'dc.nodes'}}>All Nodes</a>
        <h1>
            {{ model.Node }}
        </h1>
        {{catalog-filter}}
    {{/block-slot}}
    {{#block-slot 'content'}}
        <table>
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Tags</th>
                </tr>
            </thead>
    {{#filtered-list tagName="tbody" items=model.Services as |item|}}
                <tr>
                    <td>
                        <a href={{href-to 'dc.services.show' item.Service}}>{{item.Service}}</a>
                    </td>
                    <td>
                        Need to switch API to the public catalog one
                    </td>
                </tr>
    {{/filtered-list}}
        </table>
        <h2>Checks</h2>
        <ul>
{{#each model.Checks as |check| }}
            <li>
                <h3>
                    {{check.Name}} - {{check.CheckID}} - {{check.Status}}
                </h3>
                <h4>
                    Notes
                </h4>
                <p>
                    {{ check.Notes }}
                </p>
                <h4>
                    Output
                </h4>
                <pre>
                    {{check.Output}}
                </pre>
            </li>
{{/each}}
        </ul>
        <h2>Lock Sessions</h2>
{{#if sessions }}
        <p>
            {{errorMessage}}
        </p>
        <ul>
    {{#each sessions as |session| }}
            <li>
                {{session.Name}} - {{session.ID}}
                <button {{ action "requestInvalidateSession" session }}>Invalidate</button>
                <ul>
                    {{#each session.Checks as check }}
                        <li>{{check}}</li>
                    {{/each}}
                </ul>
                <p>
                    {{session.Behavior}} behavior{{#if session.TTL }}, {{session.TTL}} TTL{{/if}}
                </p>
            </li>
    {{/each}}
        </ul>
{{else}}
        <p>
            No sessions
        </p>
{{/if}}
        <h2>Network Tomography</h2>
        {{!-- tomographyGraph tomography 336 --}}
        <dl>
            <dt>
                Node
            </dt>
            <dd>
                What goes here?
            </dd>
            <dt>
                Minimum
            </dt>
            <dd>
                {{ tomography.min }}ms
            </dd>
            <dt>
                Median
            </dt>
            <dd>
                {{ tomography.median }}ms
            </dd>
            <dt>
                Maximum
            </dt>
            <dd>
                {{ tomography.max }}ms
            </dd>
        </dl>
    {{/block-slot}}
{{/app-view}}
