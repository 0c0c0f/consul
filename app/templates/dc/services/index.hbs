{{#app-view}}
    {{#block-slot 'header'}}
        <h1>
            Services
        </h1>
{{#if (gt items.length 0) }}
        {{catalog-filter}}
{{/if}}
    {{/block-slot}}
    {{#block-slot 'content'}}
{{#if (gt items.length 0) }}
        <table style="">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Node Health</th>
                    <th>Tags</th>
                </tr>
            </thead>
            {{#tabular-collection
                items=items
                tagName=''
                cell-layout=(fixed-grid-layout 1150 46) as |item index|
            }}
                    <td>
                        <a href={{href-to 'dc.services.show' 'dc1' }}>{{item.Name}}</a>
                    </td>
                    <td>
                        <dl>
                            <dt>Healthchecks Passing</dt>
                            <dd>{{item.ChecksPassing}}</dd>
                            <dt>Healthchecks Critical</dt>
                            <dd>{{item.ChecksCritical}}</dd>
                        </dl>
                    </td>
                    <td>
                        Need to switch API to the public catalog one
                    </td>
            {{/tabular-collection}}
        </table>
{{else}}
        <p>
            There are no services.
        </p>
{{/if}}
    {{/block-slot}}
{{/app-view}}

