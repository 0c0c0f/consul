{{#app-view}}
    {{#block-slot 'header'}}
        <a href={{href-to 'dc.services'}}>All Services</a>
        <h1>
            {{ model.0.Service.Service }}
        </h1>
    {{/block-slot}}
    {{#block-slot 'toolbar'}}
{{#if (gt items.length 0) }}
    {{catalog-filter filters=healthFilters search=filters.s status=filters.status onchange=(action 'filter')}}
{{/if}}
    {{/block-slot}}
    {{#block-slot 'content'}}
        <dl>
            <dt>Tags</dt>
            <dd>
                <ul>
                    <li>Tags in here</li>
                </ul>
            </dd>
        </dl>
{{#if (gt unhealthy.length 0) }}
        <div class="unhealthy">
            <h2>Unhealthy Nodes</h2>
            <div>
                <ul>
    {{#each unhealthy as |item|}}
                    {{healthchecked-resource
                        tagName='li'
                        href=(href-to 'dc.nodes.show' item.Node.Node)
                        name=item.Node.Node
                        address=item.Node.Address
                        checks=item.Checks
                    }}
    {{/each}}
                </ul>
            </div>
        </div>
{{/if}}
{{#if (gt healthy.length 0) }}
        <div class="healthy">
            <h2>Healthy Nodes</h2>
            {{#list-collection
                items=healthy
                cell-layout=(percentage-columns-layout healthy.length columns 100) as |item index|
            }}
                {{healthchecked-resource
                    href=(href-to 'dc.nodes.show' item.Node.Node)
                    name=item.Node.Node
                    address=item.Node.Address
                    checks=item.Checks
                    status=item.Checks.[0].Status
                }}
            {{/list-collection}}
        </div>
{{/if}}
    {{/block-slot}}
{{/app-view}}
