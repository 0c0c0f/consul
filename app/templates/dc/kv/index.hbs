{{#app-view}}
    {{#block-slot 'header'}}
        <h1>
            {{#if (eq parent.Key '/') }}
                Key / Value
            {{else}}
                {{ parent.Key }}
            {{/if}}
        </h1>
    {{/block-slot}}
    {{#block-slot 'actions'}}
        <a href="{{href-to 'dc.kv.create' parent.Key}}" class="type-create">Create</a>
    {{/block-slot}}
    {{#block-slot 'content'}}
{{#if (gt items.length 0)}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                    <th>Lock Session</th>
                    <th>Actions</th>
                </tr>
            </thead>
            {{#tabular-collection
                items=items
                cell-layout=(fixed-grid-layout 1150 46) as |item index|
            }}
                    <td data-test-kv="{{item.Key}}" class={{if item.isFolder 'folder' 'file' }}>
                        <a href={{href-to (if item.isFolder 'dc.kv.folder' 'dc.kv.edit') item.Key}}>{{item.basename}}</a>
                    </td>
                    <td>
                        Value (need to change API call to get this)
                    </td>
                    <td>
                        Lock Session (need to change API call to get this)
                    </td>
                    <td>
                        <div class="with-confirmation">
                            <p>
                                Are you sure you want to delete {{item.basename}}?
                            </p>
                            <button type="button" class="type-delete" {{ action "requestDelete" item parent}}>Delete</button>
                            <button type="button" class="type-cancel" {{ action "requestDelete" item parent}}>Cancel</button>
                        </div>
                    </td>
            {{/tabular-collection}}
        </table>
{{else}}
        <p>There are no Key / Value pairs.</p>
{{/if}}
    {{/block-slot}}
{{/app-view}}